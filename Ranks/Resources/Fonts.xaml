<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Ranks">
    <FontFamily x:Key="Montserrat">pack://application:,,,/Resources/#Montserrat Alternates Regular</FontFamily>

    <Style x:Key="RanksText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Montserrat}"/>
        <Setter Property="Foreground">
            <Setter.Value>
                <SolidColorBrush Color="{StaticResource Orange}"/>
            </Setter.Value>
        </Setter>
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="0"/>
    </Style>


    <Style x:Key="UserSelectionTitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Montserrat}"/>
        <Setter Property="Foreground">
            <Setter.Value>
                <SolidColorBrush Color="{StaticResource Orange}"/>
            </Setter.Value>
        </Setter>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>