<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Ranks.Resources">
    
    <ControlTemplate x:Key="SearchBox" TargetType="{x:Type TextBox}">
        <Border Background="{TemplateBinding Background}" 
                x:Name="Bd" BorderBrush="Black"
                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <materialDesign:PackIcon 
                    Grid.Column="0" 
                    Kind="Search" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Margin="10,0">
                </materialDesign:PackIcon>

                <ScrollViewer 
                    Grid.Column="1"
                    x:Name="PART_ContentHost"
                    materialDesign:HintAssist.Hint="Поиск"
                    Background="Transparent">
                </ScrollViewer>
            </Grid>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="Text" Value=""/>
                <Setter TargetName="PART_ContentHost" Property="Opacity" Value="1"/>
            </Trigger>
            <Trigger Property="IsFocused" Value="False">
                <Setter Property="Text" Value="Поиск"/>
                <Setter TargetName="PART_ContentHost" Property="Opacity" Value="0.5"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>



    <Style x:Key="SearchTextBox" TargetType="TextBox">
        <Setter Property="Height" Value="30"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextWrapping" Value="NoWrap"/>
        <Setter Property="AcceptsReturn" Value="False"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="23,0"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>


    <ControlTemplate x:Key="EditFieldTextBox" TargetType="{x:Type TextBox}">
        <Border Background="{TemplateBinding Background}" 
                x:Name="Bd" BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <ScrollViewer
                    Grid.Column="1" 
                    x:Name="PART_ContentHost" 
                    Background="Transparent">
                </ScrollViewer>
            </Grid>
        </Border>
    </ControlTemplate>

    <Style x:Key="EditFieldTextBoxStyle" TargetType="TextBox">
        <Setter Property="Margin" Value="50,0"/>
        <Setter Property="Template" Value="{StaticResource EditFieldTextBox}"/>
        <Setter Property="Foreground" Value="{StaticResource OrangeBrush}"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Background" Value="{StaticResource WindowControlsColor}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
    </Style>

    <Style x:Key="AboutTextBoxStyle" TargetType="TextBox">
        <Setter Property="Margin" Value="50,100"/>
        <Setter Property="Template" Value="{StaticResource EditFieldTextBox}"/>
        <Setter Property="Foreground" Value="{StaticResource MoreDarkerOrangeBrush}"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Background" Value="{StaticResource WindowControlsColor}"/>
        <Setter Property="BorderThickness" Value="0,0,0,0"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextAlignment" Value="Justify"/>
    </Style>

    <Style x:Key="GroupTextBoxes" TargetType="TextBox">
        <Setter Property="Margin" Value="10,10"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Template" Value="{StaticResource EditFieldTextBox}"/>
        <Setter Property="Foreground" Value="{StaticResource Black}"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Background" Value="{StaticResource GrayBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,0"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextAlignment" Value="Justify"/>
    </Style>
    
    <Style x:Key="ConstTextBoxStyle" TargetType="TextBox">
        <Setter Property="Margin" Value="0,40,0,0"/>
        <Setter Property="Template" Value="{StaticResource EditFieldTextBox}"/>
        <Setter Property="Foreground" Value="{StaticResource MoreDarkerOrangeBrush}"/>
        <Setter Property="Background" Value="{StaticResource DarkPurple}"/>
        <Setter Property="HorizontalContentAlignment" Value="Right"/>
        <Setter Property="BorderThickness" Value="0,0,0,0"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="TextAlignment" Value="Left"/>
    </Style>

    <Style x:Key="InfoTextBoxStyle" TargetType="TextBox">
        <Setter Property="Margin" Value="20,40,20,0"/>
        <Setter Property="Template" Value="{StaticResource EditFieldTextBox}"/>
        <Setter Property="Foreground" Value="{StaticResource TrueOrange}"/>
        <Setter Property="Background" Value="{StaticResource DarkPurple}"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="HorizontalContentAlignment" Value="Right"/>
        <Setter Property="BorderThickness" Value="0,0,0,0"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextAlignment" Value="Left"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
    </Style>

    <Style x:Key="NewEditFieldTextBoxStyle" TargetType="TextBox">
        <Setter Property="Margin" Value="10"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Template" Value="{StaticResource EditFieldTextBox}"/>
        <Setter Property="Foreground" Value="{StaticResource TrueOrange}"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Background" Value="{StaticResource DarkPurple}"/>
        <Setter Property="BorderThickness" Value="0,0,0,0"/>
    </Style>
    
    
    <Style x:Key="NoEditFieldTextBoxStyle" TargetType="TextBox">
        <Setter Property="Margin" Value="10,10,0,10"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Template" Value="{StaticResource EditFieldTextBox}"/>
        <Setter Property="Foreground" Value="{StaticResource OrangeBrush}"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Background" Value="{StaticResource DarkPurple}"/>
        <Setter Property="BorderThickness" Value="0,0,0,0"/>
    </Style>
</ResourceDictionary>